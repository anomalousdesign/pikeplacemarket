#subscribe.modal.ppm-modal.hide
	.modal-body
		%hr.red
		%h1.red Subscribe
		%form{action: "/signup", method: :post, validate: true}
			%input{type:'text', name: "first_name", placeholder: "First Name", style: "width:97%; margin-top:5px", type: "text"}
			%input{type:'text', name: "last_name", placeholder: "Last Name", style: "width:97%; margin-top:5px", type: "text"}
			%input{type:'email', name: "email", required: "true", placeholder: "Email Address", style: "width:97%; margin-top:5px"}
			%input.company{type:'text', name: "company", placeholder: "Company", style: "width:97%; margin-top:5px", type: "text"}
			%input{type:'submit', value:'Join Now', class: 'submit btn btn-primary pull-right'}
		%div{style:"height:30px"}

:javascript
	$(function(){
		$("#subscribe .company").hide()
	})